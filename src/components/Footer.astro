---
const links = [
  { href: "#top", title: "Inicio" },
  { href: "#experience", title: "Experiencia" },
  { href: "#projects", title: "Proyectos" },
  { href: "#about", title: "Sobre mi" },
  { href: "#contact", title: "Contacto" },
]
---

<footer
  class="opacity-80 m-4 mt-16 w-full mx-auto container lg:max-w-4xl
  md:max-w-2xl mb-10 flex justify-center"
>
  <div
    class="w-full max-w-[1120px] mx-auto p-4 md:flex md:items-center
    md:justify-between md:p-6"
  >
    <span
      class="inline-block w-full text-sm text-gray-500 text-center
      dark:text-gray-400 md:w-auto"
    >
      Hecho con ❤️ junto a
      <a href="https://midu.dev" class="hover:underline">Midudev</a>.
    </span>

    <ul
      class="flex flex-wrap justify-center items-center gap-4 mt-3 text-sm
      text-gray-500 font-medium dark:text-gray-400 sm:mt-0"
    >
      {links.map(({ href, title }) => (
        <li class="mr-4 last:mr-0 sm:mr-4 md:mr-6">
          <a
            href={href}
            class="hover:underline"
          >
            {title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</footer>