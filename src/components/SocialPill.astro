---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {}

const { ...props } = Astro.props
---

<a
  {...props}
  target="_blank"
  rel="noopener noreferrer" 
  class="flex items-center justify-center gap-x-2 px-2 py-1 text-xs border
  border-white/10 rounded-full bg-white/5 transition hover:scale-110
  hover:bg-white/10 md:px-4 md:py-2 md:text-base"
>
  <slot />
</a>